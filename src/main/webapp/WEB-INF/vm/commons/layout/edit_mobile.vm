<!-- Content Wrapper. Contains page content -->
<!-- Content Header (Page header) -->
<script src="/resources/plugins/jQuery/jquery-2.2.3.min.js"></script>

<script src="/resources/plugins/select2/select2.full.min.js"></script>
<!-- Main content -->
<section class="content">

    <!-- SELECT2 EXAMPLE -->
    <div class="box box-info">
        <div class="box-header">
            <i class="fa fa-plus"></i>
            <h3 class="box-title">添加机器</h3>
            <div class="pull-right box-tools">
##                <button type="button" class="btn btn-info btn-sm" data-widget="remove" data-toggle="tooltip" title="Remove">
##                    <i class="fa fa-times"></i></button>
            </div>
        </div>
        <form action="/EditMachineServlet" method="post">
            <input id="id" name ="id"  type="hidden"  value= "$!{id}">
            <input id="usernick" name ="usernick"  type="hidden"  value= "$!{userNick}">
            <input id="redirect_url" name ="redirect_url"  type="hidden"  value= "$!{redirect_url}">
            <!-- /.box-header -->
            <div class="box-body">
                <div class="row">
                    <div class="col-md-12">
                        <div class="form-group">
                                <select class="form-control select2" id ="platform" name="platform" data-placeholder="*选择手机平台"  style="width: 100%;">
                                #if ($addnew =="addnew")
                                    <option value="" disabled selected>※选择平台</option>
                                #else
                                    <option value="$!{platform}" >$!{platform}</option>
                                #end
                                <option value="Android">Android</option>
                                <option value="iOS">iOS</option>
                            </select>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12">
                        <div class="form-group">
                            <input id="model" name ="model"  type="text"  value= "$!{model}" class="form-control" placeholder="※手机名称">
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12">
                        <div class="form-group">
                            <input id="os" name ="os"  type="text" value ="$!{os}"   class="form-control" placeholder="※手机版本">
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12">
                        <div class="form-group">
                            <input id="NO" name ="NO"  type="text" value ="$!{nub}"  class="form-control" placeholder="※手机编号">
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12">
                        <div class="form-group">
                            <input id="user" name ="user"  type="text" value ="$!{user}"  class="form-control" placeholder="※使用人">
                        </div>
                    </div>
                </div>
                #if ($id !="null")
                    <div class="row"  >
                        <div class="col-md-12">
                            <label>借用日期:</label>
                            <input type="datetime-local"   id = "modify" name ="modify" value="$!{modify}" >
                        </div>
                    </div>
                #end
                <div class="row">
                    <div class="col-md-12">
                    <div class="form-group">
                    <button class="btn btn-primary btn-sm btn-flat" type="submit" name="action">确定
                        <i class="mdi-content-send right"></i>
                    </button>
                    &nbsp&nbsp
                    <a class="btn btn-primary btn-sm btn-flat" onclick="javascript:history.back(-1);">返回</a>
                    </div>
                    </div>
                </div>
        </form>

    </div>
</section>
<!-- /.content -->

